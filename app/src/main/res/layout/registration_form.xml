<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/background_cream"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="Registration Form"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="For person who do not have account"
        tools:textColor="@color/red"
        tools:textSize="15sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer_cream">

        <ImageView
            android:id="@+id/red_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/red_line"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/green_line"
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:background="@drawable/green_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/dark_red_line"
            android:layout_width="130dp"
            android:layout_height="3dp"
            android:background="@drawable/darkred_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Please enter your name as shown on your government issued ID."
            android:textColor="@color/red"
            android:textSize="15sp"
            tools:paddingLeft="10dp" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner_bg"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="15dp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Last Name Input Field -->
        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/round_corner_bg"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="15dp"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Phone Input Field -->
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/round_corner_bg"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:hint="Phone"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Date of Birth Input Field -->
        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/round_corner_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_dob"
            android:drawablePadding="15dp"
            android:focusable="false"
            android:hint="Date of Birth"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <EditText
            android:id="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/round_corner_bg"
            android:drawableLeft="@drawable/ic_idnumber"
            android:drawablePadding="15dp"
            android:hint="ID number"
            android:inputType="number"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Please provide you blood type"
            android:textColor="@color/red"
            android:textSize="15sp"
            tools:paddingLeft="10dp" />

        <Spinner
            android:id="@+id/bloodTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_bg"
            android:contentDescription="Blood Type selection"
            android:importantForAccessibility="yes" />
    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:text="Continue" />

</LinearLayout>