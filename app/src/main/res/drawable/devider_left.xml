<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom border layer -->
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/grey" android:width="2px"/>
        </shape>
    </item>
    <!-- Background layer -->
    <item  android:top="1dp" android:left="0.5dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>